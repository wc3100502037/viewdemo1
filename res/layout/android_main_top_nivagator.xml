<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/id_switch_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >
        <LinearLayout 
            android:id="@+id/id_tab_chat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            >
            <TextView 
                android:id="@+id/id_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="聊天"
                android:textColor="#0000ff"
                android:textSize="15sp"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/id_tab_friend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:saveEnabled="true"
            android:gravity="center"
            android:padding="10dip"
            >
            <TextView 
                android:id="@+id/id_friend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="好友"
                android:textColor="#000000"
                android:textSize="15sp"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/id_tab_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            >
            <TextView 
                android:id="@+id/id_contact_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="联系人"
                android:textColor="#0000ff"
                android:textSize="15sp"/>
            
        </LinearLayout>      
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/id_tab_line"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:contentDescription="tab"
        android:background="@drawable/tab_selected_pressed_holo"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    

</LinearLayout>
